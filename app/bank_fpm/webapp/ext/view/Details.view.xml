<mvc:View xmlns:core="sap.ui.core" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m"
xmlns:macros="sap.fe.macros" 
xmlns:html="http://www.w3.org/1999/xhtml" 
controllerName="bankfpm.ext.view.Details"
modelContextChange="onModelContextChange">
    <Page id="Details" title="{i18n>DETAIL_PAGE_HEADER}">
       <headerContent>
            <macros:FlexibleColumnLayoutActions id="_IDGenFlexibleColumnLayoutActions1" />
        </headerContent>
        <content>            
             <VBox id="displayMode"
                visible="{= !${ui>/isEditable} }"
                class="sapUiSmallMargin">
                <macros:Form id="GeneralInformation1"
                    metaPath="@UI.FieldGroup#GeneralInformation1"
                    title="General Information" />
                <macros:Form id="GeneralInformation2"
                    metaPath="@UI.FieldGroup#GeneralInformation2"
                    title="Additional Information" />
                <macros:Form id="GeneralInformation3"
                    metaPath="@UI.FieldGroup#GeneralInformation3"
                    title="Stock Information" />
                <macros:Form id="AdminInfomation"
                    metaPath="@UI.FieldGroup#AdminInfomation"
                    title="Administrative Infomation" />
            </VBox>
             <Wizard id="wizard"
                finishButtonText="Save"
                complete="onSavePress"
                renderMode="Page"
                visible="{ui>/isEditable}"
                height="auto">

                <WizardStep id="wizardStep1"
                    title="General Information">
                    <macros:Form metaPath="@UI.FieldGroup#WizardGeneralInformation1"
                        id="WizardGeneralInformation1" />
                </WizardStep>
                <WizardStep id="wizardStep2"
                    title="Additional Information">
                    <macros:Form metaPath="@UI.FieldGroup#WizardGeneralInformation2"
                        id="WizardGeneralInformation2" />
                </WizardStep>
                <WizardStep id="wizardStep3"
                    title="Stock Information">
                    <macros:Form metaPath="@UI.FieldGroup#WizardGeneralInformation3"
                        id="WizardGeneralInformation3" />
                </WizardStep>
            </Wizard>         
</content>
        	<footer>
			<OverflowToolbar id="otbFooter">
				<ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                 <Button id="editButton"
                text="Edit"
                press="onEditPress"
                type="Emphasized"
                class="sapUiSmallMarginBegin"
                visible="{= !${ui>/isEditable} }"/>

                <Button id="cancelButton"
                text="Cancel"
                press="onCancelPress"
                type="Reject"
                class="sapUiSmallMarginBegin"
                visible="{ui>/isEditable}" />
                </OverflowToolbar>
		</footer>
    </Page>
</mvc:View>