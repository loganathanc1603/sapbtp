<mvc:View controllerName="html5module.controller.Main" xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="idPage">
    	<!-- <headerContent>
			<Button icon="sap-icon://customer" press="onPressProfile"/>
		</headerContent> -->
		<customHeader>
			<f:ShellBar title="{i18n>title}" class="sapUiNoMargin"
				homeIcon="https://ui5.sap.com/resources/sap/ui/documentation/sdk/images/logo_sap.png">
				<f:profile>
					<Avatar initials="{LocalModel>/UserAttributes/Initial}" press="onPressProfile"/>
				</f:profile>
			</f:ShellBar>
		</customHeader>
        <content> 
        <Table id="idProductsTable"
			class="sapUiSmallMarginTop"
			items="{
				path: '/Products'
			}">
			<columns>
			<Column
				width="12em">
				<Text text="Product" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Supplier" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true">
				<Text text="Category ID" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true">
				<Text text="Quantity Per Unit" />
			</Column>
			<Column>
				<Text text="UnitP rice" />
			</Column>
            <Column>
				<Text text="Units In Stock" />
			</Column>
			<Column>
				<Text text="Units On Order"/>
			</Column>
			<Column>
				<Text text="Reorder Level"/>
			</Column>
			<Column>
				<Text text="Discontinued"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<ObjectIdentifier
						title="{ProductID}"
						text="{ProductName}"/>
					<Text text="{SupplierID}" />
					<Text text="{CategoryID}" />
					<Text text="{QuantityPerUnit}"/>
					<Text text="{UnitPrice}"/>
                    <Text text="{UnitsInStock}"/>
					<Text text="{UnitsOnOrder}"/>
					<Text text="{ReorderLevel}"/>
					<Text text="{Discontinued}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
        </content>
    </Page>
</mvc:View>
