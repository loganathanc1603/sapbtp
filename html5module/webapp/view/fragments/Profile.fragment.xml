<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="idProfilePopover"
		title="{/UserAttributes/firstname} {/UserAttributes/lastname}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom">
        <content>
            <List>
               <!-- <StandardListItem title="{/UserAttributes/firstname}"/> -->
				<StandardListItem title="{/UserAttributes/email}" icon="sap-icon://email" class="sapUiTinyMargin"/>
				<StandardListItem title="Change Theme" icon="sap-icon://palette" type="Active" 
					press="onPressChangeTheme" class="sapUiTinyMargin"/>                
                <StandardListItem title="Logout" icon="sap-icon://log" type="Active" press="onPressLogOut"
					class="sapUiTinyMargin"/>
            </List>
        </content>
		<!-- <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
			</OverflowToolbar>
		</footer> -->
	</Popover>
</core:FragmentDefinition>
